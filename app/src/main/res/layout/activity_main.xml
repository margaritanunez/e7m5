<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/contraseñaTextView"
        android:layout_width="407dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="397dp"
        android:layout_height="73dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingrese contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/checkPasswordButton"
        app:layout_constraintEnd_toEndOf="@+id/contraseñaTextView"
        app:layout_constraintStart_toStartOf="@+id/contraseñaTextView"
        app:layout_constraintTop_toBottomOf="@+id/contraseñaTextView"
        app:layout_constraintVertical_bias="0.056" />

    <Button
        android:id="@+id/checkPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="296dp"
        android:text="Verificar fortaleza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passwordText"
        app:layout_constraintStart_toStartOf="@+id/passwordText" />
</androidx.constraintlayout.widget.ConstraintLayout>